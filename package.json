{
  "name": "hoodstock.rocks",
  "version": "1.0.0",
  "private": "true",
  "scripts": {
    "start": "npx @11ty/eleventy --input=./hoodstock.rocks --serve",
    "lint-tooling": "npx eslint '*.js' 'tooling/**/*.js'",
    "build": "node tooling/clean.js hoodstock.rocks && npm-run-all build:*",
    "lint": "npm-run-all lint:*",
    "dev": "npm-run-all lint build watch",
    "watch": "npm-run-all --parallel watch:*",
    "lint:js": "npx eslint hoodstock.rocks",
    "lint:styles": "npm-run-all prettify stylelint",
    "prettify": "prettier './hoodstock.rocks/assets/styles/**/*.scss' --write",
    "stylelint": "stylelint './hoodstock.rocks/assets/styles/**/*.scss' --customSyntax postcss-scss",
    "build:copyassets": "node tooling/copy-assets.js hoodstock.rocks fonts",
    "build:images": "node tooling/process-images.js hoodstock.rocks",
    "build:styles": "node tooling/build-css.js hoodstock.rocks",
    "build:js": "node tooling/build-js.js hoodstock.rocks",
    "watch:assets": "onchange './hoodstock.rocks/assets/fonts' -- npm run build:copyassets",
    "watch:images": "onchange './hoodstock.rocks/assets/images/**/*' -- npm run build:images",
    "watch:styles": "onchange './hoodstock.rocks/assets/styles/**/*.scss' -- npm-run-all lint:styles build:styles",
    "watch:js": "onchange './hoodstock.rocks/assets/js/**/*.js' -- npm-run-all lint:js build:js"
  },
  "author": "Clive Murray <clive+murray@clivemurray.com>",
  "license": "UNLICENSED",
  "type": "module",
  "browserslist": [
    ">0.3%, last 5 versions, not dead"
  ],
  "engines": {
    "node": "22"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "26.0.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@springernature/eslint-config": "^6.1.0",
    "autoprefixer": "10.4.19",
    "del": "7.1.0",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-no-use-extend-native": "0.5.0",
    "eslint-plugin-promise": "6.2.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "postcss": "8.4.38",
    "postcss-csso": "6.0.1",
    "postcss-custom-properties": "13.3.10",
    "postcss-scss": "4.0.9",
    "prettier": "3.3.2",
    "rollup": "4.22.4",
    "sass": "1.57.1",
    "sharp": "0.33.4",
    "stylelint": "15.10.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-scss": "4.6.0",
    "svgo": "3.3.2",
    "util": "0.12.5"
  }
}
